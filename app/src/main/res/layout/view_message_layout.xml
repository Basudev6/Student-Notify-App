<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="15dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="15dp"
            />
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <LinearLayout
            android:id="@+id/others_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
           >

            <TextView
                android:id="@+id/others_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingVertical="5dp"
                />

            <TextView
                android:id="@+id/others_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nameflgkflgfkglf"
                android:textSize="15dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="#023850"
                android:textColor="@color/white"
                android:padding="4dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/own_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom|right"
           >



            <TextView
                android:id="@+id/own_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nameflgkflgfkglf"
                android:textSize="15dp"
                android:background="@drawable/edit_text"
                android:backgroundTint="#03557A"
                android:textColor="@color/white"
                android:padding="4dp"
                />

        </LinearLayout>







    </LinearLayout>


</LinearLayout>

